generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Bummy {
  id          String   @id @default(cuid()) @map("_id")
  blockNumber Int
  createdAt   DateTime @default(now())

  owner   String
  BummyId String @unique

  //
  momId String
  // mom   Bummy  @relation(fields: [BummyId], references: [id])
  dadId String
  // dad   Bummy  @relation(fields: [BummyId], references: [id])
  genes String
}

model Exhaust {
  id    String @id @default(cuid()) @map("_id")
  owner String
  momId Int
  dadId Int
}

model Transfer {
  id          String   @id @default(cuid()) @map("_id")
  blockNumber Int
  createdAt   DateTime @default(now())

  from    String
  to      String
  tokenId Int

  @@unique([from, to, tokenId])
}
